<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/normal_margin"
    android:layout_marginStart="@dimen/normal_margin"
    android:layout_marginEnd="@dimen/normal_margin"
    app:cardBackgroundColor="@android:color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/large_margin">

        <ImageView
            android:id="@+id/business_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_empty_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/business_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:text="@string/mock_business_name"
            app:layout_constraintEnd_toStartOf="@id/business_review"
            app:layout_constraintStart_toEndOf="@id/business_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/business_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mock_business_address"
            app:layout_constraintBottom_toBottomOf="@id/business_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/business_name"
            app:layout_constraintTop_toBottomOf="@id/business_name" />

        <TextView
            android:id="@+id/business_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mock_business_review"
            app:layout_constraintBottom_toBottomOf="@id/business_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/business_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>